<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
  <ActionBar>
    <GridLayout columns="auto, *" class="action-bar">
      <Image src="{{ logoSource }}" width="40" height="40" class="m-r-15" col="0"/>
      <Label text="Adoptacop" class="text-center font-bold" col="1"/>
    </GridLayout>
  </ActionBar>

  <ScrollView>
    <StackLayout class="p-4 space-y-4">
      <Image src="{{ logoSource }}" class="w-48 h-48 self-center" />
      
      <Label text="Community Policing App" class="text-2xl font-bold text-center" />
      <Label text="EST. 2024" class="text-lg text-center text-gray-600" />
      
      <Button text="Report Incident" tap="{{ onReportIncident }}" class="btn btn-primary" />
      <Button text="View Reports" tap="{{ onViewReports }}" class="btn btn-secondary" />
      <Button text="Community Updates" tap="{{ onCommunityUpdates }}" class="btn btn-info" />
    </StackLayout>
  </ScrollView>
</Page>